<div class=task_<%=@task.completed%>>
  <%= render partial: "completed_bar", locals: { task: @task } %>
  <h1><%= @task.name %></h1>
  <% if @task.site %>
    <h2><%= link_to @task.site, @task.site %></h2>
  <% end %>
  <h3><%= @task.description %></h3>
  <h3><%= @task.minutes %> minute(s)</h3>
  <%= link_to 'Back', root_path %> | <%= link_to 'Edit', edit_task_path(@task) %>
</div>
